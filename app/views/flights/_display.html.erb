<% if @results.blank? %>
    <h3>No Results Found</h3>
<% else %>
    <ul>
    <% @results.each do |result| %>
        <li>From: <%= result.from_airport.name %> '<%= result.from_airport.code %>' | To: <%= result.to_airport.name %> '<%= result.to_airport.code %>' | Date: <%= result.start %> | Duration: <%= result.duration %> minutes </li>
    <% end %>
    </ul>
<% end %>